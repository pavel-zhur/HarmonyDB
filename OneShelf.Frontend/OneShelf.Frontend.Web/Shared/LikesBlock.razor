<div class="input-group ">
    @if (Level0Available)
    {
        <div class="input-group-append">
            <button @onclick="async () => await Update.InvokeAsync(0)" class=" btn btn-outline-secondary rounded-0 rounded-start @(CurrentLevel == 0 ? "primary-likes" : " ")"><span class="fas fa-heart heart-0"></span></button>
        </div>
        <div class="input-group-append">
            <button @onclick="async () => await Update.InvokeAsync(1)" class="btn btn-outline-secondary rounded-0 @(CurrentLevel == 1 ? "primary-likes" : "")"><span class="fas fa-heart heart-1"></span></button>
        </div>
    }
    else
    {
        <div class="input-group-append">
            <button @onclick="async () => await Update.InvokeAsync(1)" class=" btn btn-outline-secondary rounded-0 rounded-start @(CurrentLevel==1 ? "primary-likes" : " " )"><span class="fas fa-heart heart-1"></span></button>
        </div>
    }
    <div class="input-group-append">
        <button @onclick="async () => await Update.InvokeAsync(2)" class="btn btn-outline-secondary rounded-0 @(CurrentLevel == 2 ? "primary-likes" : "")"><span class="fas fa-heart heart-2"></span></button>
    </div>
    @if (DisplayDislike)
    {
        <div class="input-group-append">
            <button @onclick="async () => await Update.InvokeAsync(3)" class="btn btn-outline-secondary rounded-0 @(CurrentLevel == 3 ? "primary-likes" : "")"><span class="fas fa-heart heart-3"></span></button>
        </div>
        <div class="input-group-append">
            <button @onclick="async () => await Update.InvokeAsync(null)" class="btn btn-outline-secondary rounded-0 rounded-end @(CurrentLevel == null ? "btn primary-likes btn-likes-close" : "btn btn-likes btn-likes-close")"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512"><path d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z"/></svg></button>
        </div>
    }
    else
    {
        <div class="input-group-append">
            <button @onclick="async () => await Update.InvokeAsync(3)" class="btn btn-outline-secondary rounded-0 rounded-end @(CurrentLevel == 3 ? "primary-likes" : "")"><span class="fas fa-heart heart-3"></span></button>
        </div>
    }
</div>

@code {

    [Parameter]
    public byte? CurrentLevel { get; set; }

    [Parameter]
    public bool DisplayDislike { get; set; } = true;

    [Parameter]
    public required EventCallback<byte?> Update { get; set; }

    [Parameter]
    public required bool Level0Available { get; set; }

}
