@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer ViewLocalizer

@{
    ViewBag.Title = ViewLocalizer["Too many requests"];
    Layout = "_Layout";
}

<h2>@ViewLocalizer["Too many requests"].</h2>

<p>@ViewLocalizer["Please try to refresh in a few moments"]: <input type="button" value="@ViewLocalizer["Refresh"]" onclick="location.reload()" /></p>